run = [
    "deno",
    "run",
    "--lock=lock.json",
    "--lock-write",
    "--allow-net",
    "--allow-read",
    "--allow-write",
    "--no-check",
    "mod.ts"
]

hidden = [".deno"]

entrypoint = "views/index.dejs"

[env]
DENO_DIR = "/home/runner/${REPL_SLUG}/.deno"

[nix]
channel = "stable-21_11"